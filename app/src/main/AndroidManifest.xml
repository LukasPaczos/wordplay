<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="paczos.com.mastermind">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGame"
            android:label="@string/title_activity_new_game"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>
        <activity
            android:name=".Trophies"
            android:label="@string/title_activity_trophies"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>
        <activity
            android:name=".NewMastermind"
            android:label="@string/title_activity_newMastermind"
            android:parentActivityName=".NewGame"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewGame" />
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden"
            android:name=".GamePanel"
            android:label="@string/title_activity_newMastermind"
            android:parentActivityName=".Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewCross"
            android:label="@string/title_activity_new_cross"
            android:parentActivityName=".NewGame"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="paczos.com.mastermind.NewGame" />
        </activity>
        <activity
            android:name=".GamePanelCross"
            android:label="@string/title_activity_game_panel_cross"
            android:parentActivityName=".NewCross"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="paczos.com.mastermind.NewCross" />
        </activity>
    </application>

</manifest>
