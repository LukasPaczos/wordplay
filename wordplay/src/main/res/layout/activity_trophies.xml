<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context="com.paczos.wordplay.Trophies">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/stats_easy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/bialy"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/turkus"
            />

        <TextView
            android:id="@+id/stats_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/bialy"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/zielony"
            />

        <TextView
            android:id="@+id/stats_hard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/bialy"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/czerowny"
            />

        <TextView
            android:id="@+id/stats_extreme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/bialy"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/ciemny_szary"
            />

    </LinearLayout>
    
    <Button
        android:id="@+id/button_reset_stats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="@string/button_reset_stats"
        android:textColor="@color/bialy"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/ciemny_szary"
        android:onClick="resetStats"/>



</RelativeLayout>
